<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/shareData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF7269">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/img_heard"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px" />


        <TextView
            android:id="@+id/dataType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_heard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150px"
            android:text="睡眠"
            android:textColor="#BAB7BF" />

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataType"
            android:layout_centerHorizontal="true"
            android:layout_margin="20px"
            android:text="分数"
            android:textColor="@color/white"
            android:textSize="90px" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/data"
            android:layout_toEndOf="@+id/data"
            android:text="单位"
            android:textColor="#BAB7BF" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data"
            android:layout_centerHorizontal="true"
            android:text="日期"
            android:textColor="#BAB7BF" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_below="@+id/date"
            android:layout_marginTop="100px">


            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_above="@+id/text_1"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/stepstime" />

                <TextView
                    android:id="@+id/text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10px"
                    android:text="活动总时长"
                    android:textColor="#BAB7BF" />


                <TextView
                    android:id="@+id/textData_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_1"
                    android:layout_centerHorizontal="true"
                    android:text="23:00"
                    android:textColor="@color/white"
                    android:textSize="50px" />


                <TextView
                    android:id="@+id/childUnit_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textData_1"
                    android:layout_toRightOf="@+id/textData_1"
                    android:text="时间"
                    android:textColor="#BAB7BF"
                    android:textSize="30px" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_above="@+id/text_2"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/mileage" />

                <TextView
                    android:id="@+id/text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10px"
                    android:text="总里程"
                    android:textColor="#BAB7BF" />


                <TextView
                    android:id="@+id/textData_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_2"
                    android:layout_centerHorizontal="true"
                    android:text="23:00"
                    android:textColor="@color/white"
                    android:textSize="50px" />


                <TextView
                    android:id="@+id/childUnit_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textData_2"
                    android:layout_toRightOf="@+id/textData_2"
                    android:text="时间"
                    android:textColor="#BAB7BF"
                    android:textSize="30px" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="20px"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_above="@+id/text_3"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/fire" />

                <TextView
                    android:id="@+id/text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10px"
                    android:text="总消耗"
                    android:textColor="#BAB7BF" />


                <TextView
                    android:id="@+id/textData_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_3"
                    android:layout_centerHorizontal="true"
                    android:text="23:00"
                    android:textColor="@color/white"
                    android:textSize="50px" />


                <TextView
                    android:id="@+id/childUnit_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textData_3"
                    android:layout_toRightOf="@+id/textData_3"
                    android:text="时间"
                    android:textColor="#BAB7BF"
                    android:textSize="30px" />

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/showApp"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageView
                android:layout_width="100px"
                android:layout_height="80px"
                android:src="@mipmap/appicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="@string/app_name"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_qq"
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_marginLeft="50px"
                android:layout_weight="1"
                android:src="@mipmap/ico_qqsign_482x" />

            <ImageView
                android:id="@+id/img_QQ_zone"
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_weight="1"
                android:src="@mipmap/qq_zone" />

            <ImageView
                android:id="@+id/img_WX"
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_weight="1"
                android:src="@mipmap/wx" />

            <ImageView
                android:id="@+id/img_friends"
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_weight="1"
                android:src="@mipmap/prant" />

            <ImageView
                android:id="@+id/img_weibo"
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_weight="1"
                android:src="@mipmap/weibo" />

            <ImageView
                android:id="@+id/img_download"
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_marginRight="30px"
                android:layout_weight="1"
                android:src="@mipmap/download" />


        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_gravity="end"
        android:layout_margin="50px"
        android:src="@mipmap/icon_back" />


</FrameLayout>