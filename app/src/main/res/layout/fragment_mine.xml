<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/bg_userInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <com.lab.dxy.bracelet.ui.CircleImageView
                    android:id="@+id/userImg"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80px" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userImg"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="小狼崽"
                    android:textSize="35px"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/userData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userName"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/UserInfo"
                        android:textSize="25px" />


                    <ImageView
                        android:id="@+id/go"
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/btn_arrow1_w36_n2x" />

                </LinearLayout>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@color/list_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/DaysRun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/daySteps"
                        android:textSize="20px" />

                    <TextView
                        android:id="@+id/averageSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="40px"
                        android:textStyle="bold" />

                </LinearLayout>


                <View
                    android:id="@+id/view1"
                    android:layout_width="1px"
                    android:layout_height="150px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/list_gray" />


                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/sumRun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/TotalKm"
                        android:textSize="20px" />

                    <TextView
                        android:id="@+id/sumStepsToKm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="40px"
                        android:textStyle="bold" />

                </LinearLayout>


                <View
                    android:id="@+id/view2"

                    android:layout_width="1px"
                    android:layout_height="150px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/list_gray" />


                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Standard"
                        android:textSize="20px" />

                    <TextView
                        android:id="@+id/daysCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sumRun"
                        android:layout_marginTop="30px"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="40px"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="10px"
                android:background="@color/list_gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="50px"
                android:text="@string/myDevice"
                android:textSize="20px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="10px"
                android:background="@color/list_gray" />


            <LinearLayout
                android:id="@+id/addDervice"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/selector_text"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_myDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myDevice"
                    android:textSize="25px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@color/list_gray"
                android:visibility="invisible" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="40px"
                android:text="目标设置"
                android:textSize="25px"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@color/list_gray"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/aimRun"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/selector_text"
                android:gravity="center_vertical"
                android:padding="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="15px"
                    android:layout_toRightOf="@+id/img2"
                    android:text="目标步数"
                    android:textSize="25px" />


                <TextView
                    android:id="@+id/aimRunText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:layout_toLeftOf="@+id/go12"
                    android:text="未设置"
                    android:textSize="25px" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentStart="true"
                    android:src="@mipmap/detail_timeline_run2x" />


                <ImageView
                    android:id="@+id/go12"
                    android:layout_width="50px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="10px"
                    android:src="@mipmap/btn_arrow1_w36_n2x" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@color/list_gray" />

            <RelativeLayout
                android:id="@+id/aimWeight"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/selector_text"
                android:gravity="center_vertical"
                android:padding="20px"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_toRightOf="@+id/img"
                    android:gravity="center_vertical"
                    android:text="目标体重"
                    android:textSize="25px" />

                <TextView
                    android:id="@+id/aimWeightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:layout_toLeftOf="@+id/go13"
                    android:gravity="center_vertical"
                    android:text="未设置"
                    android:textSize="25px" />

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:src="@mipmap/icon_weighttarget_2x" />


                <ImageView
                    android:id="@+id/go13"
                    android:layout_width="50px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="10px"
                    android:src="@mipmap/btn_arrow1_w36_n2x" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@color/list_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="40px"
                android:text="功能设置"
                android:textSize="25px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:background="@color/list_gray" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusableInTouchMode="true"
                    android:padding="10dp" />
            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>