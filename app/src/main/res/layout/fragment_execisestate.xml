<?xml version="1.0" encoding="utf-8"?>
<me.dkzwm.smoothrefreshlayout.SmoothRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.lab.dxy.bracelet.ui.RoundIndicatorView
                android:id="@+id/mRoundIndicatorView"
                android:layout_width="match_parent"
                android:layout_height="800px"
                android:layout_gravity="top" />


            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_below="@+id/mRoundIndicatorView">


                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_above="@+id/text_1"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/stepstime" />

                    <TextView
                        android:id="@+id/text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10px"
                        android:text="@string/stepsTime"
                        android:textColor="#BAB7BF" />


                    <TextView
                        android:id="@+id/textData_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_1"
                        android:layout_centerHorizontal="true"
                        android:text="23:00"
                        android:textColor="@color/flyBlue"
                        android:textSize="50px" />


                    <TextView
                        android:id="@+id/childUnit_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textData_1"
                        android:layout_toRightOf="@+id/textData_1"
                        android:text=""
                        android:textColor="#BAB7BF"
                        android:textSize="30px" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_above="@+id/text_2"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mileage" />

                    <TextView
                        android:id="@+id/text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10px"
                        android:text="@string/stepsKm"
                        android:textColor="#BAB7BF" />


                    <TextView
                        android:id="@+id/textData_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_2"
                        android:layout_centerHorizontal="true"
                        android:text="23:00"
                        android:textColor="@color/flyBlue"
                        android:textSize="50px" />


                    <TextView
                        android:id="@+id/childUnit_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textData_2"
                        android:layout_toRightOf="@+id/textData_2"
                        android:text="km"
                        android:textColor="#BAB7BF"
                        android:textSize="30px" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20px"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_3"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_above="@+id/text_3"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/fire" />

                    <TextView
                        android:id="@+id/text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10px"
                        android:text="@string/stepsKcal"
                        android:textColor="#BAB7BF" />


                    <TextView
                        android:id="@+id/textData_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_3"
                        android:layout_centerHorizontal="true"
                        android:text="23:00"
                        android:textColor="@color/flyBlue"
                        android:textSize="50px" />


                    <TextView
                        android:id="@+id/childUnit_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textData_3"
                        android:layout_toRightOf="@+id/textData_3"
                        android:text="kcal"
                        android:textColor="#979498"
                        android:textSize="30px" />

                </RelativeLayout>


            </LinearLayout>

            <com.lab.dxy.bracelet.ui.myGridView
                android:id="@+id/mGridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:clipToPadding="true"
                android:horizontalSpacing="4px"
                android:numColumns="2"
                android:padding="4px"
                android:verticalSpacing="4px"
                android:visibility="gone">


            </com.lab.dxy.bracelet.ui.myGridView>


            <LinearLayout
                android:id="@+id/img_statistics"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_alignParentRight="true"
                android:gravity="center">


                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"

                    android:src="@mipmap/icon_statistics" />

            </LinearLayout>


            <TextView
                android:id="@+id/stepsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:layout_margin="20px"
                android:text="运动详情:" />


            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/mColumnChartView"
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:layout_below="@+id/stepsTitle"
                android:layout_margin="20px" />


        </RelativeLayout>

    </ScrollView>


</me.dkzwm.smoothrefreshlayout.SmoothRefreshLayout>